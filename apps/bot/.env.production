# PerpMate Bot Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/perpmate?schema=public

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# Privy Authentication Service
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret
PRIVY_AUTHORIZATION_PRIVATE_KEY=your_privy_authorization_private_key

# Hyperliquid Configuration
HYPEREVM_RPC_URL=https://api.hyperliquid-testnet.xyz/evm

# Solana Configuration (Optional - for gas funding)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_MASTER_WALLET_PRIVATE_KEY=your_solana_master_wallet_private_key_for_gas_funding

# AI/NLP Configuration (Optional)
GEMINI_API_KEY=your_gemini_api_key_for_nlp_processing

# Server Configuration
PORT=8080
NODE_ENV=production

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Signal System Configuration
SIGNAL_CONFIDENCE_THRESHOLD=60
SIGNAL_GENERATION_INTERVAL=3600000